<%
i = menu.menu_no - 1
-%>
<div>
  <%= check_box_tag "menus[#{i}][enabled]", true, menu.enabled == true %>
      <b>タブ<%= menu.menu_no%> </b>
      <%= hidden_field_tag "menus[#{i}][menu_no]", menu.menu_no %>
      
      <p>
        <label>タイトル</label>
        <%= text_field_tag "menus[#{i}][title]", menu.title, :size => 70, :required => true %>
      </p>
      <p>
        <label>wikiページ</label>
        <%= text_field_tag "menus[#{i}][page_name]", menu.page_name, :size => 70, :required => true %>
      </p>
      </div>
